<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/bacdes"
    tools:context=".signin.newAccActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/addpic"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageSignUp"
        android:elevation="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:background="@drawable/editext"
        android:hint="Username"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:id="@+id/newAccUserName"
        />
    <EditText
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:background="@drawable/editext"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:id="@+id/newAccEmail"
        />
    <EditText
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:background="@drawable/editext"
        android:hint="Password"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:id="@+id/newAccPassword"
        />
    <EditText
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:background="@drawable/editext"
        android:hint="Confirm password"
        android:layout_margin="10dp"
        android:id="@+id/newAccCPassword"
        android:inputType="textPassword"
        />
    <EditText
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:background="@drawable/editext"
        android:hint="Age"
        android:inputType="number"
        android:layout_margin="10dp"
        android:id="@+id/newAccAge"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:text="SIgn in"
        android:id="@+id/signInButton"
        android:elevation="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Already have an accout. Login here."
        android:id="@+id/textToLogin"
        />

</LinearLayout>